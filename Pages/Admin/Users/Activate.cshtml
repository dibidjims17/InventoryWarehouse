@page
@model MyRazorApp.Pages.Admin.Users.ActivateModel
@{
    ViewData["Title"] = "Activate User";
}

<div class="container">
    <header class="page-header">
        <h2 class="page-title">Activate User</h2>
    </header>

    <div class="alert alert-success">
        Are you sure you want to activate this user?
    </div>

    <form method="get">
        <input type="hidden" name="id" value="@Request.Query["id"]" />
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Yes, Activate</button>
            <a asp-page="/Admin/Users/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
