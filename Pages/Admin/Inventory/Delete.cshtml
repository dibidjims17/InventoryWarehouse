@page
@model MyRazorApp.Pages.Admin.Inventory.DeleteModel
@{
    ViewData["Title"] = "Delete Item";
}

@section Styles {
    <link rel="stylesheet" href="~/css/inventory.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-forms.css" asp-append-version="true" />
}

<div class="container">
    
    <header class="page-header">
        <h2 class="page-title"><i class="fas fa-trash-alt"></i> Delete Item</h2>
    </header>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            @Html.Raw(Model.SuccessMessage)
            <br />
            Redirecting in 
            <span id="countdown" class="countdown" 
                  data-seconds="3" 
                  data-redirect="/Admin/Inventory/Index"></span> 
            seconds...
        </div>
    }
    else
    {
        <div class="delete-confirmation-box">
            
            <h3 class="confirmation-title">Are you sure you want to delete this item?</h3>
            <p class="confirmation-warning">
                This action is permanent and cannot be undone. All related borrowing history for this item will be affected.
            </p>
            
            <ul class="item-details-list">
                <li><strong>Name:</strong> @Model.ItemName</li>
                <li><strong>Category:</strong> @Model.Category</li>
            </ul>

            <form method="post" class="form-actions-delete">
                <input type="hidden" asp-for="Id" />

                <span asp-validation-for="Id" class="text-danger"></span>

                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-check-circle"></i> Yes, Delete Item
                </button>
                <a asp-page="/Admin/Inventory/Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times-circle"></i> Back
                </a>
            </form>
        </div>
    }

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/countdown.js"></script>
}