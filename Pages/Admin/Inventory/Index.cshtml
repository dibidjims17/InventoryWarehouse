@page
@model MyRazorApp.Pages.Admin.Inventory.IndexModel
@{
    ViewData["Title"] = "Inventory Items";
}

@section Styles {
    <link rel="stylesheet" href="~/css/inventory.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/inventory-gallery.css" asp-append-version="true" />
}

<div class="container">

    <header class="page-header">
        <h2 class="page-title">Inventory Items</h2>
        <div class="header-actions">
            <a asp-page="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Item</a>
        </div>
    </header>

    <div class="inventory-grid">
        @foreach (var item in Model.Items)
        {
            <div class="inventory-card">
                <div class="card-image">
                    <img src="@(string.IsNullOrEmpty(item.ImagePath) ? "/images/placeholder-item.svg" : $"/uploads/items/{item.ImagePath}")"
                              alt="Image of @item.Name" 
                              loading="lazy"/> 
                </div>
                <div class="card-content">
                    <h3>@item.Name</h3>
                    <p class="code">Code: <strong>@item.Code</strong></p>
                    <p class="category">Category: @item.Category</p>
                    <p class="quantity">Qty: @item.Quantity</p>
                    <p class="addedby">Added By: @item.AddedBy</p>
                </div>
                <div class="card-actions">
                    
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-edit" title="Edit Item">
                        <i class="fas fa-edit"></i>
                    </a>
                    
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Delete Item"
                       onclick="return confirm('Are you sure you want to delete this item: @item.Name?');">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>
            </div>
        }
        
        @if (!Model.Items.Any())
        {
            <p class="text-center" style="grid-column: 1 / -1; color: var(--text-color-light); margin-top: 2rem;">
                No inventory items found. Click "Add New Item" to get started.
            </p>
        }
    </div>
</div>