@page
@model MyRazorApp.Pages.Client.BorrowItem.IndexModel
@{
    ViewData["Title"] = "My Borrowed Items";
}

@section Styles {
    <link rel="stylesheet" href="~/css/inventory.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/borrow.css" asp-append-version="true" />
}

<div class="container">

    <header class="page-header">
        <h2 class="page-title"><i class="fas fa-handshake"></i> My Borrowed Items</h2>
    </header>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger error-message">@Model.ErrorMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success success-message">@Model.SuccessMessage</div>
    }

    @if (!Model.Borrows.Any())
    {
        <p class="no-items">You have not borrowed any items yet.</p>
    }
    else
    {
        <div class="table-wrapper card">
            <table class="table table-borrows">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th class="text-center">Qty</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Return Status</th>
                        <th class="text-center">Return Conditions</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var borrow in Model.Borrows)
                    {
                        <tr class="@borrow.RowClass">
                            <td><strong>@borrow.ItemName</strong></td>
                            <td class="text-center">@borrow.Quantity</td>
                            <td class="text-center">
                                <span class="badge badge-status-@borrow.Status.ToLower()">
                                    <i class="fas @(borrow.Status.ToLower() switch {
                                        "pending" => "fa-clock",
                                        "approved" => "fa-handshake",
                                        "rejected" => "fa-times-circle",
                                        "returned" => "fa-check-double",
                                        _ => "fa-info-circle"
                                    })"></i>
                                    @borrow.Status
                                </span>
                            </td>
                            <td class="text-center">
                                @if (borrow.ReturnRequested && borrow.Status != "Returned")
                                {
                                    <span class="text-warning"><i class="fas fa-clock"></i> Pending</span>
                                }
                                else if (borrow.Status == "Returned")
                                {
                                    <span class="text-success"><i class="fas fa-check-double"></i> Completed</span>
                                }
                                else
                                {
                                    <span class="text-secondary">No</span>
                                }
                            </td>
                            <td class="text-center"><small>@borrow.ConditionSummary</small></td>
                            <td class="text-center table-actions">
                                @if (borrow.CanRequestReturn)
                                {
                                    <form method="post" asp-page-handler="RequestReturn" style="display:inline">
                                        <input type="hidden" name="borrowId" value="@borrow.Id" />
                                        <button type="submit" class="btn btn-sm btn-primary">
                                            <i class="fas fa-undo-alt"></i> Request Return
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
