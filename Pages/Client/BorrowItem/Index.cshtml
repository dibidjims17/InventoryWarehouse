@page
@model MyRazorApp.Pages.Client.BorrowItem.IndexModel
@{
    ViewData["Title"] = "My Borrowed Items";
}

@section Styles {
    <link rel="stylesheet" href="~/css/inventory.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/borrow.css" asp-append-version="true" />
}

<div class="container"> 
    
    <header class="page-header">
        <h2 class="page-title"><i class="fas fa-handshake"></i> My Borrowed Items</h2>
    </header>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger error-message">@Model.ErrorMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success success-message">@Model.SuccessMessage</div>
    }

    @if (Model.Borrows.Count == 0)
    {
        <p class="no-items">You have not borrowed any items yet.</p>
    }
    else
    {
        <table class="table table-borrows">
            <thead>
                <tr>
                    <th>Item</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Return Requested</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var borrow in Model.Borrows)
                {
                    <tr class="@GetRowClass(borrow.Status)">
                        <td>@borrow.ItemName</td>
                        <td class="text-center">@borrow.Quantity</td>
                        <td class="text-center">
                            <span class="status-badge status-@borrow.Status.ToLower()">
                                @borrow.Status
                            </span>
                        </td>
                        <td class="text-center">
                            @if (borrow.ReturnRequested)
                            {
                                <span class="text-warning"><i class="fas fa-clock"></i> Yes (Pending)</span>
                            }
                            else
                            {
                                <span class="text-secondary">No</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (borrow.Status == "Approved" && !borrow.ReturnRequested)
                            {
                                <form method="post" asp-page-handler="RequestReturn" style="display:inline">
                                    <input type="hidden" name="borrowId" value="@borrow.Id" />
                                    <button type="submit" class="btn btn-sm btn-info">
                                        <i class="fas fa-undo-alt"></i> Request Return
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="text-muted">-</span> 
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@functions {
    // Helper function to apply color to the entire row based on status
    public string GetRowClass(string status)
    {
        return status switch
        {
            "Approved" => "row-approved",
            "Pending" => "row-pending",
            "Rejected" => "row-rejected",
            "Returned" => "row-returned",
            _ => "",
        };
    }
}