@using MyRazorApp.Models
@inject MyRazorApp.Services.MongoService _mongoService

@{
    string? userId = Context.Session.GetString("user_id");
    User? currentUser = null;

    if (!string.IsNullOrEmpty(userId))
    {
        currentUser = _mongoService.GetUserByIdAsync(userId).Result;
    }

    // Default profile photo path
    string profilePhoto = "/uploads/profile_pics/default.png";
    
    // Logic to use the user's uploaded picture if the filename exists
    if (currentUser != null && !string.IsNullOrEmpty(currentUser.ProfilePicture))
    {
        profilePhoto = $"/uploads/{currentUser.ProfilePicture}";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Joyson Warehouse</title>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navigation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/datareport.css" asp-append-version="true"/>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" 
    integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    @await RenderSectionAsync("Styles", required: false)
    
    <script src="~/js/header.js" defer></script>
</head>
<body>

    <div class="app-container">
        
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h3 class="brand-name">Joyson Warehouse</h3>
            </div>

            <div class="sidebar-profile">
                <img src="@profilePhoto" class="sidebar-photo" alt="Profile Picture" />
                <div class="profile-info">
                    <p class="sidebar-username">@currentUser?.Username</p>
                    <span class="user-role">@(currentUser?.Role ?? "Guest")</span>
                </div>
            </div>

            <nav class="sidebar-menu">
                <ul>
                    @if (currentUser != null)
                    {
                        <li>
                            <a asp-page="/Index" class="nav-link">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
                                <span>Dashboard</span>
                            </a>
                        </li>

                        @if (currentUser.Role == "admin")
                        {
                            <li class="menu-header">MANAGEMENT</li>
                            <li>
                                <a asp-page="/Admin/Inventory/Index" class="nav-link">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
                                    <span>Inventory Items</span>
                                </a>
                            </li>
                            <li><a asp-page="/Admin/Categories/Index" class="nav-link"><span>Categories</span></a></li>
                            <li><a asp-page="/Admin/Users/Index" class="nav-link"><span>Users</span></a></li>
                            
                            <li class="menu-header">LOGS & DATA</li>
                            <li><a asp-page="/Admin/BorrowLog/Index" class="nav-link"><span>Borrow Log</span></a></li>
                            <li><a asp-page="/Admin/Reports/Index" class="nav-link"><span>Reports</span></a></li>
                            <li><a asp-page="/Admin/DataReport/Index" class="nav-link"><span>Data Report</span></a></li>
                        }
                        else
                        {
                            <li class="menu-header">MENU</li>
                            <li><a asp-page="/Client/ClientItems/Index" class="nav-link"><span>Items</span></a></li>
                            <li><a asp-page="/Client/BorrowItem/Index" class="nav-link"><span>My Borrowed Items</span></a></li>
                            <li><a asp-page="/Client/Activity/Index" class="nav-link"><span>My Activity</span></a></li>
                        }
                    }
                    else
                    {
                        <li><a asp-page="/Auth/Login" class="nav-link"><span>Login</span></a></li>
                    }
                </ul>
            </nav>

            @if (currentUser != null)
            {
                <div class="sidebar-footer">
                    <a asp-page="/Client/UserProfile/Index" class="footer-link" title="Profile">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                    </a>
                    <a asp-page="/Auth/Logout" class="footer-link logout" onclick="return confirmLogout()" title="Logout">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                    </a>
                </div>
            }
        </aside>

        <div class="main-content">
            
            <header class="top-bar">
                <div class="top-bar-left">
                    <button class="hamburger-btn" onclick="toggleSidebar()">
                         <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
                    </button>
                    <h2 class="page-title">@ViewData["Title"]</h2>
                </div>

                <div class="top-bar-right">
                    @if (currentUser?.Role == "admin")
                    {
                        <a asp-page="/Admin/Reports/Index" class="icon-btn" title="Notifications">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path><path d="M13.73 21a2 2 0 0 1-3.46 0"></path></svg>
                        </a>
                    }
                </div>
            </header>

            <main class="content-wrapper">
                @RenderBody()
            </main>
        </div>
        
        <div id="overlay" onclick="toggleSidebar()"></div>

    </div>

    @RenderSection("Scripts", required: false)
    
    <script>
        function toggleSidebar() {
            document.querySelector('.app-container').classList.toggle('mobile-open');
        }
    </script>

    <script>
        window.addEventListener('pageshow', function (event) {
            if (event.persisted) {
                window.location.reload();
            }
        });
    </script>

</body>
</html>